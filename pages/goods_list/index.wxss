.goods {
  padding-top: 60rpx;
}

.tab {
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #ccc;
}

.tab>view {
  height: 100rpx;
  line-height: 100rpx;
}

.shopping {
  display: flex;
  justify-content: space-between;
}

.shopping-img image{
  width: 250rpx;
  height: 250rpx;
}

.shopping-text {
  padding-top:20rpx;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  margin-left: 30rpx;
}

.shopping-text .text {
  height: 100rpx;
   overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.shopping-text .price{
  color: red;
}
.shopping-text .price>text{
  font-size: 18px;
}
.red{
  color: red;
  font-weight: 500;
}
.footer{
  margin-top: 30rpx;
  background: #ccc;
  font-size: 20px;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
}