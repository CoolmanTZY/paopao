.swiper{
  height:750rpx;
}

.slide-image{
  width:750rpx;
  height:750rpx;
}


.detail {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom:20rpx solid #eee; 
}
.detail .detail-left{
  display: flex;
  flex-direction: column;
  flex: 1;
}
.detail-left-price{
  color: red;
  font-size: 18px;
  margin-bottom:10rpx; 
}
.detail-left-content{
  height: 100rpx;
   overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  border-right: 1px solid #ccc;
}
.detail-right{
  color: #ccc; 
  width: 150rpx;
  text-align: center;
}
.detail-right .iconfont{
  margin-top: 70rpx;
}

.promotion{
  margin-top: 15rpx;
  width: 100%;
}
.promotion .promotion-text{
  color: red;
  margin-left: 30rpx;
}

.footer-bar{
  width:100%;
  height:100rpx;
  position: fixed;
  bottom:0;
  left:0;
  background:#fff;
  z-index: 99;

  display: flex;
}

.footer-bar-left{
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color:#666;
}

.footer-bar-left text{
  font-size:12px;
}

.footer-button{
  width:30%;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size:14px;
  color:#fff;
  background: orange;
}

.footer-button:last-child{
  background: red;
}

.contact{
  position:absolute;
  left:0; top:0;
  width:20%;
  height:100rpx;
  overflow: hidden;
  opacity: 0;
}