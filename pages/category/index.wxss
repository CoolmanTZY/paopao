.home-page{
  position: absolute;
  width:100%;
  top:100rpx;
  bottom:0;
}
.categories{
  display: flex;
  justify-content: space-between;
  height: 100%;
  position: relative;
}
.navs{
  position: absolute;
  left:0; top:0;
  width:200rpx;
  height:100%;
  overflow: scroll;
  background: #f6f6f6;
}
.navs-item{
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  box-sizing: border-box;
  border-bottom:1px #eee solid;
}
.active{
  font-weight: 600;
  color:red;
  background:#fff;
  position: relative;
}
.active::before{
  display: block;
  content: "";
  width:4px;
  height: 50rpx;
  background: red;
  position: absolute;
  top:20rpx;
  left: 0;
}

/* 右侧 */
.categories-right{
  position: absolute;
  left: 200rpx;
  right:0; 
  height:100%;
  overflow: scroll;
  flex:1;
  padding:20rpx;
  box-sizing: border-box;
}

.categorys-title{
  text-align: center;
  margin:20px 0;
}
.categorys-title text{
  margin: 0 20rpx;
  color:#eee;
}

.categorys-list{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.categorys-item {
  width:33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size:14px;
  color:#666;
  margin-bottom: 10rpx;
}
.categorys-item image{
  width: 122rpx;
  height: 122rpx;
}

.categorys-list-text{
  text-align: center;
  font-size: 13px;
}